@model VOS.ViewModel.Business.VOS_PEmployeeVMs.VOS_PEmployeeListVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
    <wt:row items-per-row="ItemsPerRowEnum.Three">
        <wt:textbox field="Searcher.CreateBy" empty-text="输入创建人" />
        <wt:datetime field="Searcher.StartTime" />
        <wt:datetime field="Searcher.EndTime" />
        <wt:textbox field="Searcher.FullName" empty-text="输入姓名" />
        <wt:textbox field="Searcher.Mobile" empty-text="输入联系电话" />
        <wt:textbox field="Searcher.WeChat" empty-text="输入微信账号" />
        <wt:textbox field="Searcher.TaobaAccount" empty-text="输入淘宝账号" />
        <wt:textbox field="Searcher.JDAccount" empty-text="输入京东账号" />
        <wt:combobox field="Searcher.PEstate" empty-text="@Localizer["All"]" />
        @if (@ViewBag.IsShow == true)
        {
            <wt:combobox field="Searcher.OrganizationID" items="Searcher.AllOrganization" empty-text="@Localizer["All"]" />
        }
    </wt:row>
</wt:searchpanel>
<wt:quote>
    <wt:row items-per-row="ItemsPerRowEnum.Three">
        <span class="layui-badge" style="background-color: #c2c2c2; color:#FFFFFF;">休息</span>
        <span class="layui-badge" style="background-color: #1E9FFF;color: #FFFFFF;">正常</span>
        <span class="layui-badge" style="background-color: #393D49;color: #FFFFFF;">黑名单</span>
    </wt:row>
</wt:quote>
<wt:grid vm="@Model" url="/Business/VOS_PEmployee/Search"/>
