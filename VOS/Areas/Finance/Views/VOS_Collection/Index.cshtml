@model VOS.ViewModel.Finance.VOS_CollectionVMs.VOS_CollectionListVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
    <wt:row items-per-row="ItemsPerRowEnum.Four">
        <wt:textbox field="Searcher.ShopName" empty-text="输入店铺名称"></wt:textbox>
        <wt:combobox field="Searcher.Plan_noId" items="Searcher.AllPlan_nos" empty-text="@Localizer["All"]" />
        <wt:combobox field="Searcher.CollectionState" empty-text="@Localizer["All"]" />
        @if (@ViewBag.IsShow == true)
        {
            <wt:combobox field="Searcher.OrganizationID" items="Searcher.AllOrganization" empty-text="@Localizer["All"]" />
        }
    </wt:row>
</wt:searchpanel>
<wt:grid vm="@Model" url="/Finance/VOS_Collection/Search" />
