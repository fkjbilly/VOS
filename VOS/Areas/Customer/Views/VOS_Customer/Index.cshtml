@model VOS.ViewModel.Customer.VOS_CustomerVMs.VOS_CustomerListVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
    <wt:row items-per-row="ItemsPerRowEnum.Four">
        <wt:textbox field="Searcher.cust_name" />
        <wt:combobox field="Searcher.cust_regionId" items="Searcher.Allcust_regions" empty-text="@Localizer["All"]" />
        <wt:combobox field="Searcher.cust_level" empty-text="@Localizer["All"]" />
        <wt:combobox field="Searcher.cust_flag" empty-text="@Localizer["All"]" />
        <wt:textbox field="Searcher.link_name" />
        <wt:textbox field="Searcher.link_mobile" />
        @if (@ViewBag.IsShow == true)
        {
            <wt:combobox field="Searcher.OrganizationID" items="Searcher.AllOrganization" empty-text="@Localizer["All"]" />
        }
    </wt:row>
</wt:searchpanel>
<wt:grid vm="@Model" url="/Customer/VOS_Customer/Search"/>
